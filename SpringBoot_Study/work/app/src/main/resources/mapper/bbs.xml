<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.app.mapper.BbsMapper">

    <resultMap id="map1" type="com.sist.app.vo.BbsVO">
        <id property="b_idx" column="b_idx"/>
        <collection property="c_list" ofType="com.sist.app.vo.CommVO" select="com.sist.app.mapper.CommMapper.commList" column="b_idx"/>
    </resultMap>
    
    <!-- 게시물 개수 -->
    <select id="count" resultType="int" parameterType="Map">
        SELECT COUNT(*) FROM bbs_t
        <where>
            bname = #{bname} AND status = 0
            <if test="searchType != null and searchValue != null">
                <choose>
                    <when test="searchType == 0">
                        AND subject LIKE CONCAT('%', #{searchValue}, '%')
                    </when>
                    <when test="searchType == 1">
                        AND writer LIKE CONCAT('%', #{searchValue}, '%')
                    </when>
                    <when test="searchType == 2">
                        AND content LIKE CONCAT('%', #{searchValue}, '%')
                    </when>
                </choose>
            </if>
        </where>
    </select>

    <!-- 게시물 목록 -->
    <select id="list" resultMap="map1" parameterType="Map">
        SELECT * FROM (
            SELECT @RN:=@RN+1 as rnum, a.* 
            FROM(
                SELECT * FROM bbs_t
                <where>
                    bname = #{bname} AND status = 0
                    <if test="searchType != null and searchValue != null">
                        <choose>
                            <when test="searchType == 0">
                                AND subject LIKE CONCAT('%', #{searchValue}, '%')
                            </when>
                            <when test="searchType == 1">
                                AND content LIKE CONCAT('%', #{searchValue}, '%')
                            </when>
                            <when test="searchType == 2">
                                AND writer LIKE CONCAT('%', #{searchValue}, '%')
                            </when>
                            <when test="searchType == 3">
                                AND write_date LIKE CONCAT('%', #{searchValue}, '%')
                            </when>
                        </choose>
                    </if>
                </where>
                ORDER BY b_idx DESC
            ) a, (SELECT @RN:=0) b
        ) c WHERE c.rnum BETWEEN #{begin} AND #{end}
    </select>
    
    <select id="write" parameterType="com.sist.app.vo.BbsVO">
        INSERT INTO bbs_t(subject, writer, content, bname, file_name, ori_name, write_date, status)
        VALUES(#{subject}, #{writer}, #{content}, #{bname}, #{file_name}, #{ori_name}, now(), 0)
    </select>
</mapper>